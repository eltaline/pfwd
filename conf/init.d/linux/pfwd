#!/bin/sh
### BEGIN INIT INFO
# Provides: pfwd
# Required-Start:       $syslog $local_fs $remote_fs $network
# Required-Stop:        $syslog $local_fs $remote_fs
# Default-Start:        2 3 4 5
# Default-Stop:         0 1 6
# Short-Description: pfwd Service
### END INIT INFO

. /lib/lsb/init-functions
DAEMON=pfwd
USER="root"
GROUP="root"
LOGDIR="/var/log/pfwd"
RUNDIR="/run/pfwd"
PIDFILE=/run/pfwd/pfwd.pid
DESC="pfwd Service"
start() {

	test -d $LOGDIR || install --mode=755 --owner=root --group=root --directory $LOGDIR
	test -d $RUNDIR || install --mode=755 --owner=root --group=root --directory $RUNDIR

	log_daemon_msg "Starting $DESC\n"
	start-stop-daemon -q -b -u $USER -g $GROUP -p $PIDFILE --start --exec /usr/sbin/pfwd
	if [ $? -ne 0 ]; then
		log_failure_msg "Failed"
		exit 1
	fi
	if [ $? -eq 0 ]; then
		log_success_msg "pfwd Started"
	fi
	exit 0

}

stop() {

	log_daemon_msg "Stopping $DESC\n"
	start-stop-daemon -q -p $PIDFILE --stop
	if [ $? -ne 0 ]; then
		log_failure_msg "Failed"
		exit 1
	fi
	if [ $? -eq 0 ]; then
		log_success_msg "pfwd Stopped"
	fi

}

force_reload() {

	stop
	start

}

case "$1" in

	start)
		start
		;;
	stop)
		stop
		;;
	force-reload)
		force_reload
		;;
	restart)
		stop
		start
		;;

	*)
		echo "$Usage: $DAEMON {start|stop|force-reload|restart}"
		exit 2

esac
